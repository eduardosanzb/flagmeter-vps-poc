{
  "name": "flagmeter",
  "version": "1.0.0",
  "description": "AI quota monitoring microservice",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "docker compose -f compose.dev.yml up --build",
    "dev:down": "docker compose -f compose.dev.yml down -v",
    "prod": "docker compose up --build",
    "prod:down": "docker compose down -v",
    "db:push": "pnpm --filter @flagmeter/db db:push",
    "db:studio": "pnpm --filter @flagmeter/db db:studio",
    "landing:dev": "pnpm --filter @flagmeter/landing dev",
    "landing:build": "pnpm --filter @flagmeter/landing build",
    "migrate:build": "docker build -f infra/docker/Dockerfile.migrations -t flagmeter-migrations:latest .",
    "migrate:run": "docker run --rm --network=${NETWORK_NAME:-obs_flagmeter-net} -e DATABASE_URL=${DATABASE_URL:-postgresql://flagmeter:flagmeter123@postgres:5432/flagmeter} flagmeter-migrations:latest",
    "migrate": "pnpm migrate:build && pnpm migrate:run",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "keywords": [
    "ai",
    "quota",
    "monitoring",
    "microservice",
    "typescript"
  ],
  "author": "Eduardo Sanchez",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.17.9",
    "typescript": "^5.7.2"
  }
}
